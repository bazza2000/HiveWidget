<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="8dip"
    android:background="@drawable/hive_shape" >

    <TextView
        android:id="@+id/tv_update_time"
        style="@android:style/TextAppearance.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal|top"
        android:gravity="center"
        android:text="@string/tv_update_time"
        android:textColor="#000000" >
    </TextView>

    <ImageView
        android:id="@+id/iv_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_update_time"
        android:layout_gravity="right"
        android:layout_marginTop="-5dp"
        android:contentDescription="@string/iv_weather"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_inside_temp"
        style="@android:style/TextAppearance.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_update_time"
        android:layout_gravity="left"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/iv_weather"
        android:gravity="left"
        android:singleLine="true"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tv_city"
        style="@android:style/TextAppearance.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_inside_temp"
        android:layout_gravity="left"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/iv_weather"
        android:gravity="left"
        android:singleLine="true"
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/iv_update_click"
        android:layout_width="100dp"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/iv_weather" />
    
    <ImageView
        android:id="@+id/iv_prefs_click"
        android:layout_width="100dp"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
         />

</RelativeLayout>